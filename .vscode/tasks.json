{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake", // Could be any other shell command
            "args": [
                "-B",
                "build",
                "-G",
                "Ninja",
                "-S",
                ".",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1",
                "--fresh",
            ],
            "type": "shell",
        },
        {
            "label": "cmake build debug",
            "command": "cmake", // Could be any other shell command
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
            ],
            "type": "shell",
        },
        {
            "label": "cmake build clean",
            "command": "cmake", // Could be any other shell command
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
                "--",
                "clean",
            ],
            "type": "shell",
        },
        {
            "label": "ninja build",
            "command": "ninja", // Could be any other shell command
            "options": {
                "cwd": "build"
            },
            "type": "shell",
        },
        {
            "label": "ninja clean",
            "command": "ninja", // Could be any other shell command
            "args": [
                "clean",
            ],
            "options": {
                "cwd": "build"
            },
            "type": "shell",
        },
        {
            "label": "del build (powershell)",
            "command": "del", // Could be any other shell command
            "args": [
                "build",
                "-Recurse",
                "-Force",
            ],
            "type": "shell",
        },
        {
            "label": "rm build (cmd)",
            "command": "rm", // Could be any other shell command
            "args": [
                "-r",
                "build",
            ],
            "type": "shell",
        },
        {
            "label": "msp flasher",
            "command": "C:/ti/MSPFlasher_1.3.20/MSP430Flasher.exe", // Could be any other shell command
            "args": [
                "-n",
                "MSP430FR5994",
                "-w",
                "build/payload/csp_payload.elf",
            ],
            "type": "shell",
        }
    ]
}